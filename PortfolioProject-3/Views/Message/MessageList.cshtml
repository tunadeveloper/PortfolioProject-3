@using PortfolioProject_3.DataAccess.Entities
@model List<Message>
@{
    ViewData["Title"] = "Mesajlar";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Mesajlar</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <table class="table mt-3">
                                <thead>
                                    <tr style="background-color: #FFD6A5;">
                                        <th>#</th>
                                        <th>Ad Soyad</th>
                                        <th>Email</th>
                                        <th>Konu</th>
                                        <th>Gönderme Tarihi</th>
                                        <th>Okundu</th>
                                        <th>Sil</th>
                                        <th>Detay</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.NameSurname</td>
                                            <td>@item.Email</td>
                                            <td>@(item.Subject.Length > 30 ? item.Subject.Substring(0, 30) + "..." : item.Subject)</td>
                                            <td>@item.SendDate.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                @if (item.IsRead)
                                                {
                                                    <span class="badge bg-success">Okundu</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Okunmadı</span>
                                                }
                                            </td>
                                            <td><a href="/Message/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Message/Detail/@item.Id" class="btn btn-info">Detay</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
