@using PortfolioProject_3.DataAccess.Entities
@model List<Experience>
@{
    ViewData["Title"] = "ExperienceList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Deneyimler</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <table class="table mt-3">
                                <thead>
                                    <tr style="background-color: #00FFDE;">
                                        <th scope="col">#</th>
                                        <th scope="col">Şirket Adı</th>
                                        <th scope="col">Pozisyon</th>
                                        <th scope="col">Tarih</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Head</td>
                                            <td>@item.Title</td>
                                            <td>@item.Date</td>
                                            <td><a href="/Experience/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/Experience/Update/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <a href="/Experience/Create/" class="btn btn-primary">Deneyim Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

