@using PortfolioProject_3.DataAccess.Entities
@model Skill
@{
    ViewData["Title"] = "Yetenek Güncelle";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card shadow-sm">
                        <div class="card-header bg-info text-white">
                            <h4 class="mb-0">Yetenek Güncelle</h4>
                        </div>
                        <div class="card-body">
                            <form asp-action="Update" asp-controller="Skill" method="post">
                                <input type="hidden" name="Id" value="@Model.Id" />

                                <div class="mb-3">
                                    <label class="form-label">Yetenek Adı</label>
                                    <input type="text" name="Title" value="@Model.Title" class="form-control" required />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Değer (%)</label>
                                    <input type="number" name="Value" value="@Model.Value" class="form-control" required />
                                </div>

                                <div class="d-flex justify-content-between">
                                    <button type="submit" class="btn btn-success">Güncelle</button>
                                    <a asp-action="SkillList" class="btn btn-secondary">İptal</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
