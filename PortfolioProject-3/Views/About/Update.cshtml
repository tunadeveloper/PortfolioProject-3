@using PortfolioProject_3.DataAccess.Entities
@model About
@{
    ViewData["Title"] = "Hakkımda Güncelle";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card shadow-sm">
                        <div class="card-header bg-info text-white">
                            <h4 class="mb-0">Hakkımda Güncelle</h4>
                        </div>
                        <div class="card-body">
                            <form asp-action="Update" asp-controller="About" method="post">
                                <input type="hidden" name="Id" value="@Model.Id" />

                                <div class="mb-3">
                                    <label class="form-label">Başlık</label>
                                    <input type="text" name="Title" value="@Model.Title" class="form-control" required />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Alt Açıklama</label>
                                    <textarea name="Subdescription" class="form-control" rows="2" required>@Model.Subdescription</textarea>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Detay</label>
                                    <textarea name="Detail" class="form-control" rows="4" required>@Model.Detail</textarea>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <button type="submit" class="btn btn-success">Güncelle</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
