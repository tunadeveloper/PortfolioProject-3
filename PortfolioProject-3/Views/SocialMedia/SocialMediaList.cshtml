@using PortfolioProject_3.DataAccess.Entities
@model List<SocialMedia>
@{
    ViewData["Title"] = "SocialMediaList";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="main-panel">
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Sosyal Medya Hesapları</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <table class="table mt-3">
                                <thead>
                                    <tr style="background-color: #C1F0F6;">
                                        <th scope="col">#</th>
                                        <th scope="col">Başlık</th>
                                        <th scope="col">Icon</th>
                                        <th scope="col">Link</th>
                                        <th scope="col">Sil</th>
                                        <th scope="col">Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.Title</td>
                                            <td>@item.Icon</td>
                                            <td><a href="@item.Url" target="_blank">@item.Url</a></td>
                                            <td><a href="/SocialMedia/Delete/@item.Id" class="btn btn-danger">Sil</a></td>
                                            <td><a href="/SocialMedia/Update/@item.Id" class="btn btn-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <a href="/SocialMedia/Create/" class="btn btn-primary">Sosyal Medya Ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
