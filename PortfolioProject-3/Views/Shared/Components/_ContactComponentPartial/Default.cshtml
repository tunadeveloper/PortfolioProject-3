@using PortfolioProject_3.DataAccess.Entities
@model Message
<section id="contact" class="s-contact target-section">

    <div class="overlay"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>Contact</h3>
            <h1>@ViewBag.title</h1>

            <p class="lead">@ViewBag.description</p>
        </div>
    </div>

    <div class="row contact__main">
        <div class="col-eight tab-full contact__form">
            <form asp-action="CreateMessage" asp-controller="Message" method="post">
                @Html.AntiForgeryToken()
                <input name="NameSurname" type="text" class="full-width" placeholder="İsim Soyisim" required>
                <input name="Email" type="email" class="full-width" placeholder="E-Posta Adresi" required>
                <input name="Subject" type="text" class="full-width" placeholder="Konu" required>
                <textarea name="MessageDetail" class="full-width" placeholder="Detay..." required></textarea>
                <button type="submit">Gönder</button>
            </form>

            <div class="message-warning">
                Something went wrong. Please try again.
            </div>

            <!-- contact-success -->
            <div class="message-success">
                Your message was sent, thank you!<br>
            </div>

        </div>
        <div class="col-four tab-full contact__infos">
            <h4 class="h06">Telefon</h4>
            <p>
                Cep: @ViewBag.phone1<br>
                İşletme: @ViewBag.phone2<br>
            </p>

            <h4 class="h06">E-Posta</h4>
            <p>
                @ViewBag.email1<br>
                @ViewBag.email2
            </p>

            <h4 class="h06">Adres</h4>
            <p>
                @ViewBag.address
            </p>
        </div>

    </div>

</section> <!-- end s-contact -->
