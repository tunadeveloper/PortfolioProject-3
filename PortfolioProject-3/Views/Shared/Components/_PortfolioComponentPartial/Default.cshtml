@using PortfolioProject_3.DataAccess.Entities
@model List<Portfolio>
<section id="works" class="s-works target-section">
    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full">
            <h3>Portfolio</h3>
            <h1>Projelerim</h1>

            <p class="lead">Lorem ipsum Dolor adipisicing nostrud et aute Excepteur amet commodo ea dolore irure esse Duis nulla sint fugiat cillum ullamco proident aliquip quis qui voluptate dolore veniam Ut laborum non est in officia.</p>
        </div>
    </div>

    <div class="row masonry-wrap">
        <div class="masonry">
             @foreach(var item in Model){

            <div class="masonry__brick">
                <div class="item-folio">

                    <div class="item-folio__thumb">
                        <a href="@item.ImageUrl" class="thumb-link" title="@item.Title" data-size="1050x700">
                            <img src="@item.ImageUrl"
                                 srcset="@item.ImageUrl 1x, @item.ImageUrl 2x" alt="">
                            <span class="shadow-overlay"></span>
                        </a>
                    </div>

                    <div class="item-folio__text">
                        <h3 class="item-folio__title">
                            @item.Title
                        </h3>
                        <p class="item-folio__cat">
                            @item.Subtitle
                        </p>
                    </div>

                    <a href="@item.Url" class="item-folio__project-link" title="Proje">
                        <i class="im im-link"></i>
                    </a>

                    <div class="item-folio__caption">
                        <p>@item.Description</p>
                    </div>

                </div> <!-- end item-folio -->
            </div> <!-- end masonry__brick -->
            }
        </div>
    </div> <!-- end masonry -->

</section> <!-- end works -->