@model PortfolioProject_3.Models.FeatureAndSocialMediaViewModel
<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="/hola-master/images/hero-bg.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    <div class="home-content">

        <div class="row home-content__main">
            @foreach (var feature in Model.Features)
            {
                <h3>@feature.Title</h3>

                <h1>
                    @feature.Description
                </h1>
            }


            <div class="home-content__buttons">
                <a href="#works" class="smoothscroll btn btn--stroke">
                    Projelerimi Gör
                </a>
                <a href="#about" class="smoothscroll btn btn--stroke">
                   Hakkımda
                </a>
            </div>

            <div class="home-content__scroll">
                <a href="#about" class="scroll-link smoothscroll">
                    <span>Aşağı Git</span>
                </a>
            </div>

        </div>

    </div>

    <ul class="home-social">
        @foreach (var socialMedia in Model.SocialMedias)
        {
            <li>
                <a href="@socialMedia.Url"><i class="@socialMedia.Icon" aria-hidden="true"></i><span>@socialMedia.Title</span></a>
            </li>
        }

    </ul>

</section> 